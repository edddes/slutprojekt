<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8" />
  <title>Startsidan</title>
  <link rel="stylesheet" href="/styles/main.css" />
</head>
<body>
  <div class="navbar">
    <a href="/">Startsidan</a>
    <a href="/2">Sida 2</a>
    <a href="/3">Sida 3</a>
    <a href="/admin/login" style="float:right; margin-right:2rem; font-weight:bold;">Admin</a>
  </div>
  <div class="main-wrapper">
    <h1><%= text1 %></h1>
    <% if (images.length === 0) { %>
      <p>Inga bilder uppladdade.</p>
    <% } %>
    <% images.forEach(image => { %>
      <div style="margin-bottom: 2rem;">
        <img src="/uploads/<%= image.filename %>" alt="Bild" style="max-width: 300px; display: block; margin: 0 auto 0.5rem auto;" />
      </div>
    <% }) %>
  </div>
</body>
</html>
